<script>
 (function () {
        if (!window.dataLayer) {
          window.dataLayer = [];
        }

        function debounce(f, ms) {
          let timer = null;
          return function () {
            let _this = this;
            let onComplete = function () {
              f.apply(_this, arguments);
              timer = null;
            };
            if (timer) {
              clearTimeout(timer);
            }
            timer = setTimeout(onComplete, ms);
          };
        }

        function createScript(url, onloadCb) {
          const bodyElement = document.getElementsByTagName('BODY')[0];
          const scriptContent = document.createElement('script');

          scriptContent.type = 'text/javascript';
          scriptContent.async = false;
          scriptContent.src = url;
          if (onloadCb) {
            scriptContent.onload = onloadCb;
          }
          bodyElement.appendChild(scriptContent);
        }

        function initSwiper() {
          const headerSwiper = new Swiper('.dji-header__slider', {
            effect: 'fade',
            pagination: {
              el: '.dji-header__slider-pagination',
              clickable: true,
            },
            navigation: {
              nextEl: '.dji-header__swiper-next',
              prevEl: '.dji-header__swiper-prev',
            },
          });


          const reviewSwiper = new Swiper('.dji-videous__swiper', {
            slidesPerView: 4,
            slidesPerGroup: 1,
            spaceBetween: 24,
            watchOverflow: true,
            breakpoints: {
              1365: {
                slidesPerView: 3,
              },
              767: {
                slidesPerView: 1,
              },
            },
            pagination: {
              el: '.dji-videous__swiper-pagination',
              clickable: true,
            },
            navigation: {
              nextEl: '.dji-videous__swiper-next',
              prevEl: '.dji-videous__swiper-prev',
            },
          });
        }

        function showModalYoutube() {
          let videoNumber = +this.getAttribute('data-youtube-number');

          let videoList = document.getElementById('videoList');
          videoList.querySelector(`iframe:nth-child(${videoNumber}), a:nth-child(${videoNumber})`).style.display = 'block';

          let videoModal = document.getElementById('modalYoutube');
          videoModal.classList.add('review-modal--show');
        }

        function closeModal(event) {
          if (!event.target.getAttribute('data-close-modal')) {
            return;
          }

          let videoList = document.getElementById('videoList');
          let frames = videoList.querySelectorAll('iframe, .video-review');

          [].forEach.call(frames, function (frame) {
            if (frame.tagName === 'IFRAME') {
              frame.contentWindow.postMessage('{"event":"command","func":"stopVideo","args":""}', '*');
            }
            frame.style.display = 'none';
          });


          let videoModal = document.getElementById('modalYoutube');
          videoModal.classList.remove('review-modal--show');
        }

        function onToggleFAQ(el) {
          if (el.target) {
            el = el.target;
          }

          let isInAnimation = Boolean(el.getAttribute('data-in-animation'));
          if (isInAnimation) {
            return;
          }
          let parentNode = el.closest('.valentine-faq__item');
          let container = parentNode.querySelector('.valentine-faq__answer');
          let content = parentNode.querySelector('[itemprop="text"]');
          let contentHeight = content.offsetHeight;
          el.setAttribute('data-in-animation', 'true');
          if (parentNode.classList.contains('valentine-faq__item--open')) {
            container.style.height = contentHeight + 'px';
            setTimeout(() => {
              container.style.height = '0';
              parentNode.classList.remove('valentine-faq__item--open');
              el.removeAttribute('data-in-animation');
            }, 50);
          } else {
            container.style.height = contentHeight + 'px';
            parentNode.classList.add('valentine-faq__item--open');
            setTimeout(() => {
              container.style.height = 'auto';
              el.removeAttribute('data-in-animation');
            }, 400);
          }
        }

        function makeAnimation(elements) {
          let screenHeight;
          let elemToViewPort;


          const timeToDisableAnim = 3000;

          function addAnimation (elem) {
            elem.classList.add('anim');
            elem.setAttribute('data-anim', 'false');

            let timer = setInterval(function () {
              let elemToTop = elem.getBoundingClientRect().top;
              let elemToBottom = elem.getBoundingClientRect().bottom;

              if (elemToBottom <= 0 || elemToTop >= screenHeight) {
                elem.classList.remove('anim');
                elem.setAttribute('data-anim', 'true');

                if (elem.tagName === 'VIDEO') {
                  elem.currentTime = 0;
                }

                clearInterval(timer);
                timer = null;
              }
            }, timeToDisableAnim);
          }

          function onScrollAnimate () {
            elements.forEach(function (elem) {
              let elemToTop = elem.getBoundingClientRect().top;
              let elemToBottom = elem.getBoundingClientRect().bottom;

              if (((elemToTop <= elemToViewPort && elemToTop >= 0) || (elemToBottom >= screenHeight / 4 && elemToTop <= 0)) && elem.getAttribute('data-anim') === 'true') {
                if (!elem.complete && elem.tagName === 'IMG') {
                  elem.setAttribute('data-anim', 'false');
                  elem.addEventListener('load', function() {
                    addAnimation(elem);
                  });

                  return;
                }

                if (elem.tagName !== 'IMG') {
                  let images = elem.querySelectorAll('img');

                  [].forEach.call(images, function(image) {
                    if(!image.complete) {
                      image.addEventListener('load', function() {
                        onScrollAnimate();
                        return;
                      });
                    }
                  });
                }

                if (elem.tagName === 'VIDEO') {
                  if (elem.readyState !== 4) {
                    onScrollAnimate();
                    return;
                  }

                  elem.play();
                }

                addAnimation(elem);
              }
            });
          }

          function onResize () {
            screenHeight = window.innerHeight || document.documentElement.clientHeight || document.body.clientHeight;
            elemToViewPort = screenHeight - screenHeight / 4;
          }

          onResize = debounce(onResize, 10);
          onResize();

          onScrollAnimate = debounce(onScrollAnimate, 10);
          onScrollAnimate();

          document.addEventListener('scroll', onScrollAnimate);
          window.addEventListener('resize', onResize);
        }

        function fetchProducts() {
          let productsList = document.getElementById('productsList');
          productsList.innerHTML = '';

          function getOpacity(item) {
            if (item.prices.old) {
              return '';
            }

            return 'opacity: 0; pointer-events: none';
          }

          function getDisplay(item) {
            if (item.prices.old) {
              return '';
            }

            return 'display: none';
          }

          function formatPrice (price) {
            return (price || 0).toLocaleString().replace(/\D+/g, ' ');
          }

          function renderProduct (item) {
            productsList.innerHTML += `
              <li class="weekend-products__item">
                <a class="weekend-products__item-image" href="https://citrus.ua${item.url}" target="_blank">
                  <img src="${item.preview.src}" alt="${item.name}">
                </a>

                <a class="weekend-products__item-title" href="https://citrus.ua${item.url}" target="_blank">
                  ${item.name}
                </a>

                <span class="weekend-products__item-percent" style="${getOpacity(item)}">
                  -${item.sale.percent}%
                </span>

                <div class="weekend-products__item-price">
                  <span class="weekend-products__item-old" style="${getDisplay(item)}">
                    ${formatPrice(item.prices.old)}
                  </span>

                  <span class="weekend-products__item-current">
                    ${formatPrice(item.prices.price)} <sub class="weekend-products__item-currency">грн</sub>
                  </span>
                </div>
              </li>
            `;
          }

          fetch('https://api.citrus.ua/v5/products?segmentId=7191').then(response => response.json()).then(data => {
            document.getElementById('productsContainer').setAttribute('data-items', data.data.length);
            let priorityIds = [656788, 656789, 665773, 666148, 633188, 633189, 660790, 660793, 645584, 652854, 652853];
            let sortedArr = [];

            priorityIds.forEach(item => {
              let el = data.data.find(product => product.id === item);

              if (el) {
                sortedArr.push(el);
              }
            });

            data.data.forEach(item => {
              if (!sortedArr.some(product => product.id === item.id)) {
                sortedArr.push(item);
              }
            });

            sortedArr.forEach(function(product) {
              renderProduct(product);
            });
          });
        }

        createScript('https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.5.0/js/swiper.min.js', () => {
          initSwiper();
        });

        fetchProducts();

        document.getElementById('showAllProducts').addEventListener('click', function() {
          document.getElementById('productsContainer').classList.add('weekend-products__items-container--show-all');
        });

        let animationImages = document.querySelectorAll('[data-anim]');
        animationImages = [].slice.call(animationImages);
        makeAnimation(animationImages);

        let faqButtons = document.querySelectorAll('.valentine-faq__question');
        [].forEach.call(faqButtons, function (button, index) {
          if (index === 0) {
            onToggleFAQ(button);
          }

          button.addEventListener('click', onToggleFAQ);
        });

        let youtubeButtons = document.querySelectorAll('[data-youtube-number]');
        [].forEach.call(youtubeButtons, function (button) {
          button.addEventListener('click', showModalYoutube);
        });

        let closeModalButtons = document.querySelectorAll('[data-close-modal]');
        [].forEach.call(closeModalButtons, function (button) {
          button.addEventListener('click', closeModal);
        });
      })();
</script>